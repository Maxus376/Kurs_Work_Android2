<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="#D9D9D9"
    android:backgroundTint="#D9D9D9"
    app:cardBackgroundColor="#D9D9D9">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D9D9D9"
        android:backgroundTint="#D9D9D9">

        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/inter"
            android:text="куда:"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_column="1"
            app:layout_row="0" />

        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/inter"
            android:text="тип оплаты:"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_column="1"
            app:layout_row="0" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="48dp"
            android:fontFamily="@font/inter"
            android:text="23 мин."
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_column="0"
            app:layout_row="0" />

        <TextView
            android:id="@+id/adress"
            android:layout_width="209dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="-45dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/inter_light"
            android:inputType="textMultiLine"
            android:minLines="2"
            android:scrollHorizontally="false"
            android:text="ул. Ленина 160Вк1, кв. 106, п.5, эт.2"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:autoSizeTextType="none"
            app:layout_column="2"
            app:layout_row="0" />

        <TextView
            android:id="@+id/type_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/inter_light"
            android:text="картой"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_column="2"
            app:layout_row="0" />

        <Button
            android:id="@+id/showOnMap"
            android:layout_width="58dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#989898"
            android:fontFamily="@font/inter_light"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/black"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_navigation"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/orderComplete"
            android:layout_width="49dp"
            android:layout_height="45dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#989898"
            android:fontFamily="@font/inter_light"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/black"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_ok"
            app:layout_column="0"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="140dp"
            android:layout_height="123dp"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="?android:attr/listChoiceIndicatorSingle" />

    </androidx.gridlayout.widget.GridLayout>
</androidx.cardview.widget.CardView>